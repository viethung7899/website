---
import About from "@/components/home/About.astro"
import Experience from "@/components/home/Experience.astro"
import Project from "@/components/home/Project.astro"
import { Separator } from "@/components/ui/separator"
import BaseLayout from "@/layouts/BaseLayout.astro"
import { SEO } from "astro-seo"

const title = "Viet-Hung Nguyen"
const description =
  "Viet-Hung Nguyen is a software developer based on Vancouver and passionate about new technology"
---

<BaseLayout>
  <SEO
    slot="seo"
    {title}
    {description}
    openGraph={{
      basic: {
        title,
        type: "website",
        image: new URL("og.png", Astro.site).toString(),
        url: Astro.site
      }
    }}
  />
  <About />
  <Separator className="container p-0" />
  <Experience />
  <Separator className="container p-0" />
  <Project />
</BaseLayout>
