---
import { GITHUB, LINKEDIN } from "@/lib/constants"
import { Icons } from "./icon"
const year = new Date().getFullYear()
---

<div
  class="container flex items-center justify-between py-2 text-xs sm:text-sm"
>
  <span>
    &copy; {year} Viet-Hung Nguyen.
  </span>
  <span class="flex space-x-4">
    <a
      href={GITHUB}
      target="_blank"
      title="GitHub"
      class="text-foreground/80 hover:text-foreground"
    >
      <Icons.gitHub className="w-4 h-4" />
    </a>
    <a
      href={LINKEDIN}
      target="_blank"
      title="Linkedin"
      class="text-foreground/80 hover:text-foreground"
    >
      <Icons.linkedin className="w-4 h-4" />
    </a>
  </span>
</div>
