---
import ProjectEntry from "@/entry/ProjectEntry.astro";
import { getCollection } from "astro:content";
const projects = await getCollection("projects").then((result) => {
  result.sort((a, b) => +b.data.date - +a.data.date)
  return result
})
---

<section id="projects" class="container my-8 scroll-mt-16">
  <h3 class="text-2xl font-semibold tracking-tight text-primary">Projects ğŸš€</h3>
  <p class="text-foreground/60">A collection of projects for university courses and my programming hobbies</p>
  <ul class="mt-8 space-y-8">
    {projects.map((entry) => <ProjectEntry {entry} />)}
  </ul>
</section>